<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    style="@style/CardView.Light"
    android:layout_width="match_parent"
    android:layout_height="260dp"
    android:layout_margin="10dp"
    android:background="#FFF">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="260dp"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:layout_weight="1"
                android:minHeight="100dp">

                <ImageView
                    android:id="@+id/story_banner"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:contentDescription="@string/content"
                    android:scaleType="centerCrop"
                    android:background="@color/colorAsh"
                    android:src="@drawable/story_banner" />
                <TextView
                    android:id="@+id/premium_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:text="Premium"
                    android:textColor="@color/colorWhite"
                    android:padding="4dp"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:visibility="gone"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:background="@drawable/premium_bg"/>

                <TextView
                    android:id="@+id/story_imgtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="24dp"
                    android:layout_marginBottom="24dp"
                    android:background="@android:color/transparent"
                    android:text="Best tours"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:background="#fff"
            android:weightSum="8"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/author_image"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/profile" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="3.7">
                <TextView
                    android:id="@+id/story_title"
                    style="@style/TextAppearance.AppCompat.Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="2dp"
                    android:text="Tales of Snowwhite"
                    android:textSize="14dp"
                    />

                <TextView
                    android:id="@+id/story_publish_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:text="3 minutes ago"
                    android:textColor="#90000000"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:orientation="horizontal"
                android:weightSum="2">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:weightSum="6"
                    android:gravity="center"
                    android:orientation="horizontal">
                    <ImageButton
                        android:id="@+id/like_button"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="4"
                        android:background="@color/colorWhite"
                        app:srcCompat="@drawable/ic_thumbs_up_hand_symbol"
                        tools:ignore="VectorDrawableCompat" />

                    <TextView
                        android:id="@+id/likes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:text="4"/>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:weightSum="6">
                    <ImageButton
                        android:id="@+id/dislike_button"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="4"
                        android:background="@color/colorWhite"
                        app:srcCompat="@drawable/thumbs_down_hand_symbol" />


                    <TextView
                        android:id="@+id/dislikes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:textColor="#000"
                        android:textSize="15sp"
                        android:text="4" />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </LinearLayout>
    <ProgressBar
        android:id="@+id/reactionProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:visibility="gone"
        style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"/>


</LinearLayout>